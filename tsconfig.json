{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",             
    "moduleResolution": "NodeNext",    
    "outDir": "./dist",
    "rootDir": "./src",                
    
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "types": ["node"],

    "sourceMap": true,
    "declaration": true,
    
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    
   
    "verbatimModuleSyntax": false, 
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"] 
}